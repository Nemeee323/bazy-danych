select top 9 with ties productname, unitprice from products order by UnitPrice desc;

operatory w bazy danych: 
*, /, +, -, not
>, <, =, >=, <=, <>(różne), !=(różne)
like, not like
Not in(wat1, wat2)            ułożone w kolejności wykonywania
beetwen 10 and 100
is null, is not null
And
Or

% - zastępuje ciąg znaków np. select lastname, FirstName from Employees where lastname like '_a%' gdzie "_" powoduje szukanie kto ma na drugim miejscu litere a 

select ProductName from Products where QuantityPerUnit like '%bottl%';

select ProductName, UnitPrice from Products where UnitPrice >50;

select CompanyName, Fax from Customers where fax is null or fax like '';

--select OrderID from Orders where OrderDate between '1996-07-01' and '1996-07-31';  - szukanie zamowien w lipcu 1996

--select CompanyName from Customers where Country like 'USA' or country like 'spain'; - szukanie nazw firm z usa i hiszpani

select CompanyName from Customers where Country in('usa', 'spain');

select CompanyName from Customers where (Country like 'USA' or country like 'spain') and city not like'madrid';

select CompanyName from Customers where Country in('usa', 'spain') and city not like'madrid';

select CompanyName, fax, Country from Customers where Country in ('USA') and (Fax is null or fax like ''); 

select ProductID, UnitPrice, Quantity, Discount, (UnitPrice*Quantity)*(1-Discount) as wartosc from [Order Details];

(UnitPrice*Quantity)*(1-Discount) as wartosc - wyswietla wartosc jako nowa kolumne


select ProductName, UnitPrice, UnitsInStock, UnitPrice*UnitsInStock as wartosc
from Products where UnitPrice*UnitsInStock>1000 and SupplierID not in(5,3);


