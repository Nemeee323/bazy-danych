select ProductName, CategoryName
from Products, Categories
where products.CategoryID=categories.CategoryID;

select ProductName, categoryname
from Products inner join Categories on Products.CategoryID=Categories.CategoryID;

select productname, companyname
from Products inner join Suppliers on Products.SupplierID=Suppliers.SupplierID

select productname, CategoryName
from Products left join Categories on Products.CategoryID=Categories.CategoryID
where CategoryName is null;




select Productname, categoryname
from Products p inner join Categories c on p.CategoryID=c.CategoryID -- aliasy na nazwy tabel

select CategoryName, ProductName, CompanyName
from Categories c
inner join products p on c.CategoryID=p.CategoryID ---- 3 tabele złączone
inner join suppliers s on p.SupplierID=s.SupplierID


select CompanyName, OrderDate, ProductID, UnitPrice, Quantity, Discount
from Customers c inner join Orders o on c.CustomerID=o.CustomerID
inner join [Order Details] k on o.OrderID=k.OrderID

select CompanyName, OrderDate, ProductName, k.UnitPrice, Quantity, Discount, k.UnitPrice*Quantity*(1-Discount) as wartosc
from Customers c 
left join Orders o on c.CustomerID=o.CustomerID
left join [Order Details] k on o.OrderID=k.OrderID
left join Products p on k.ProductID=p.ProductID
where ProductName is null



select ProductName, sum(Quantity) as ile
from Customers c 
inner join Orders o on c.CustomerID=o.CustomerID
inner join [Order Details] k on o.OrderID=k.OrderID
inner join Products p on k.ProductID=p.ProductID
group by ProductName
order by ile desc;


select e.LastName, e.FirstName, d.LastName,d.FirstName
from Employees e inner join Employees d on e.EmployeeID=d.ReportsTo;
